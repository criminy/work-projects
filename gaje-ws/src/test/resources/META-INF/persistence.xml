<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="gaje" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <!--  We put classes in here that are mapped with JPA Annotations -->
    <class>us.gaje.model.Vendor</class>
    
    <properties>
    <!-- TODO: replace with HSQLDB configuration -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="show_sql" value="true"/>
      <property name="hibernate.current_session_context_class" value="thread"/>
      <property name="hibernate.ejb.cfgfile" value="hibernate-test.cfg.xml"/>	     
      <property name="hibernate.hbm2ddl.auto" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
